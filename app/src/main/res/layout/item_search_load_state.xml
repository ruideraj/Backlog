<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/load_state_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyle"/>

    <TextView
        android:id="@+id/load_state_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/search_load_text_margin"
        android:textAlignment="center"
        android:textSize="@dimen/search_load_text_size"
        android:textColor="?android:attr/textColorPrimary"
        android:text="@string/search_error"/>

    <Button
        android:id="@+id/load_state_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/search_retry"/>

</LinearLayout>