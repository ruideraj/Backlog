<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.Backlog.PopupOverlay</item>
    </style>

    <style name="ListDialogRadioButton">
        <item name="android:layout_width">@dimen/button_radio_size</item>
        <item name="android:layout_height">@dimen/button_radio_size</item>
        <item name="android:button">@null</item>
        <item name="buttonCompat">@null</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="EntryMenuFab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="EntryTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">@dimen/text_input_box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/text_input_box_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/text_input_box_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/text_input_box_corner_radius</item>
        <item name="boxStrokeColor">?attr/colorControlNormal</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
        <item name="errorTextColor">@color/dark_red</item>
        <item name="boxStrokeErrorColor">@color/dark_red</item>
    </style>

    <style name="EntryTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/text_input_box_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/text_input_box_padding_vertical</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarButtonStyle">@style/AlertDialogButton</item>
    </style>

    <style name="AlertDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/color_control_normal</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchIcon">@null</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="SearchResultTextField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:textSize">@dimen/search_item_field_text_size</item>
    </style>

    <style name="SearchResultFieldIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/item_text_margin</item>
    </style>
</resources>